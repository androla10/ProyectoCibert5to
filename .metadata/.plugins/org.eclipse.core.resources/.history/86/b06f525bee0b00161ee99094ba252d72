<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- Esta constante indicara a struts que estamos en etapa de desarrollo 
		por lo tanto generarÃ¡ mas mensajes de salida para que sepamos si estamos 
		haciendo algo mal. -->
	<constant name="struts.devMode" value="true" />

	<!-- Esta constante indica que cuando modifiquemos los archivos de configuracion 
		de struts 2 no tengamos que volver a hacer un deployement de la aplicacion 
		para que los cambios tomen efecto -->
	<constant name="struts.configuration.xml.reload" value="true" />


	<package name="proyecto1" namespace="/Parcial" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		
		
	
		<!-- 		Redireccionando a otra pagina -->
		
		<action name="FormularioLogin">
			<result>Login.jsp</result>
		</action>

		<action name="FormularioPrincipal">
			<result type="tiles">principal</result>
		</action>
		
		
		<action name="FormularioAdministrador">
		    <result type="tiles">administrar</result>
		</action>
		
		<!-- 		end otra pagina -->
		
		<action name="Login" class="com.cibertec.Actions.LoginAction"
			method="login">
			<result name="success" type="tiles">principal</result>
			<result name="login">Login.jsp</result>
		</action>
		
		<action name="LoginOut" class="com.cibertec.Actions.LoginAction"
			method="outLogin">
			<result name="login">Login.jsp</result>
		</action>
		
		<action name="validarSession" class="com.cibertec.Actions.LoginAction" method="validarSession">
		    <result name="success" type="tiles">principal</result>
		    <result name="login">Login.jsp</result>
		</action>

	</package>

	<include file="strutsUsuario/UsuarioAction.xml" />
	<include file="sistema.xml"/>
</struts>