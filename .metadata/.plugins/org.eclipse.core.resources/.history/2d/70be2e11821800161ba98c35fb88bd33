package com.cibertec.metodos;

import java.io.File;

public class Metodos {
	public static void guardarArchivo(File file, String filename, String filesDirectory) {
		FileInputStream in = null;
		FileOutputStream out = null;

		File dir = new File(filesDirectory);
		if (!dir.exists())
			dir.mkdirs();

		String targetPath = dir.getPath() + File.separator + fileName;
		System.out.println("source file path ::" + file.getAbsolutePath());
		System.out.println("saving file to ::" + targetPath);
		File destinationFile = new File(targetPath);
		try {
			in = new FileInputStream(file);
			out = new FileOutputStream(destinationFile);
			int c;

			while ((c = in.read()) != -1) {
				out.write(c);
			}

		} finally {
			if (in != null) {
				in.close();
			}
			if (out != null) {
				out.close();
			}
		}

	}
}
